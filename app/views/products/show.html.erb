<h2><%= @product.name %></h2>
Cost: <%= @product.cost %>
<br>
From: <%= @product.state_of_origin %>
<br>
<button type="button" name="edit">
  <%= link_to "Edit", edit_product_path(@product) %>
</button>
<button type="button" name="delete">
  <%= link_to "Delete", product_path(@product), :data => {:confirm => "You sure you want to delete this product?", :method => "delete"} %>
</button>

<h2>Reviews</h2>

<h3>Write a Review</h3>
<%= render "reviews/form" %>

<ul>
  <% @product.reviews.each do |review| %>
    <li>
      <h4><%= review.rating %> Stars</h4>
      <em><%= review.author %> says: </em>
      <%= review.content_body %></li>
  <% end %>
</ul>
