<h2><%= @product.name %></h2>
Cost: <%= @product.cost %>
<br>
From: <%= @product.state_of_origin %>

<button type="button" name="edit">
  <%= link_to "Edit", edit_product_path(@product) %>
</button>

<button type="button" name="delete">
  <%= link_to "Delete", product_path(@product), :data => {:confirm => "You sure you want to delete this product?", :method => "delete"} %>
</button>
